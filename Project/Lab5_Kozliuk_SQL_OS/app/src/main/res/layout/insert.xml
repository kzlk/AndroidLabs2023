<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Add EditText fields for operatingSystem name, scope, teacher, schedule, success rate -->
    <EditText
        android:id="@+id/editTextSubjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Операційна система" />

    <EditText
        android:id="@+id/editTextScope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Інформація про компанію" />

    <EditText
        android:id="@+id/editTextTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Версія" />

    <EditText
        android:id="@+id/editTextSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Архітектурні особливості" />

    <EditText
        android:id="@+id/editTextSuccessRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Біжуча доля на ринку" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Зберегти" />

</LinearLayout>
